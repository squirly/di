{
  "name": "@squirly/di",
  "version": "0.0.0-development",
  "description": "A slim, fully typed dependency inection library for achieving IoC.",
  "author": "Tyler Jones <tyler@squirly.ca>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/squirly/di.git"
  },
  "keywords": [
    "di",
    "ioc",
    "injection"
  ],
  "bugs": {
    "url": "https://github.com/squirly/di/issues"
  },
  "homepage": "https://github.com/squirly/di#readme",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "check": "run-p commitlint lint build:check test",
    "lint": "tslint --project . && (cd typeTests && tslint --project .)",
    "lint:fix": "tslint --project . --fix && (cd typeTests && tslint --project . --fix)",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "prebuild": "rm -rf lib",
    "build": "tsc",
    "build:check": "tsc --noEmit",
    "commit": "git-cz && npm run commitlint",
    "commitlint": "semantic-commitlint",
    "semantic-release": "semantic-release"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "7.4.0",
    "@commitlint/config-conventional": "7.3.1",
    "@types/jest": "23.3.12",
    "commitizen": "3.0.5",
    "cz-conventional-changelog": "2.1.0",
    "dtslint": "0.3.0",
    "jest": "23.6.0",
    "jest-junit": "6.0.1",
    "npm-run-all": "4.1.5",
    "prettier": "1.15.3",
    "semantic-commitlint": "1.3.2",
    "semantic-release": "15.13.3",
    "ts-jest": "23.10.5",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.17.0",
    "tslint-plugin-prettier": "2.0.1",
    "typescript": "3.1.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/src/**/*.spec.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "coverageDirectory": "<rootDir>/reports/coverage",
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts",
      "!<rootDir>/src/testing.ts"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": -2,
        "functions": 100,
        "lines": 100
      }
    },
    "reporters": [
      "default",
      "jest-junit"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.jest.json"
      }
    }
  },
  "jest-junit": {
    "output": "./reports/tests/junit.xml"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "release": {
    "verifyRelease": [
      "semantic-commitlint"
    ]
  }
}
